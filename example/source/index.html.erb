<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Example</title>

  <style>
    body {
      font-family: sans-serif;
      font-size: 16px;
    }
  </style>
</head>

<body>

<h1><%= headless.space.name %></h1>

<% headless.posts.each do |post| %>
  <h2><%= post.title %></h2>
  <p><%= post.body %></p>
  <p><%= image_tag post.asset(:image)&.url(width: 400), alt: post.asset(:image)&.name %></p>
  <p>Written by <%= post.reference(:author)&.name %></p>
<% end %>

</body>
</html>
